<h1>Table Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ward</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @table_locations.each do |table_location| %>
      <tr>
        <td><%= link_to table_location.name, table_location %></td>
        <td><%= table_location.ward %></td>
        <td><%= table_location.starts_at.strftime("%As %-I:%M%P") %> - <%= table_location.ends_at.to_s(:short_time) %></td>
        <td><% link_to 'Destroy', table_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

